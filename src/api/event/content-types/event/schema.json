{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": "Events with video recordings for the Events Library"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "startDate": {
      "type": "datetime",
      "required": true
    },
    "endDate": {
      "type": "datetime",
      "required": true
    },
    "circleGroup": {
      "type": "string",
      "required": true,
      "description": "The circle group this event belongs to"
    },
    "performers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person",
      "inversedBy": "events_as_performer"
    },
    "guests": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::person.person",
      "inversedBy": "events_as_guest"
    },
    "recording": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::recording.recording",
      "inversedBy": "event"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    }
  }
}
