{
  "kind": "collectionType",
  "collectionName": "people",
  "info": {
    "singularName": "person",
    "pluralName": "people",
    "displayName": "Person",
    "description": "People who perform or are guests in events"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "graphql": {
      "singularName": "person",
      "pluralName": "people"
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "jobTitle": {
      "type": "string"
    },
    "events_as_performer": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::event.event",
      "inversedBy": "performers"
    },
    "events_as_guest": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::event.event",
      "inversedBy": "guests"
    }
  }
}
